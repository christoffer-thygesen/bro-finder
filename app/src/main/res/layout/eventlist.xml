<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp">


    <TextView
        android:id="@+id/eventDate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Date" />

    <TextView
        android:id="@+id/eventTime"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/eventDate"
        android:text="Time" />

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/eventTime"
        android:text="Title" />

    <TextView
        android:id="@+id/eventLocation"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Location" />

    <TextView
        android:id="@+id/eventDescription"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eventDate"
        android:text="Description" />

    <TextView
        android:id="@+id/eventsParticipants"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/eventDescription"
        android:layout_alignBottom="@+id/eventDescription"
        android:layout_toEndOf="@+id/eventDescription"
        android:text="Participants" />

    <TextView
        android:id="@+id/eventDistance"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/eventsParticipants"
        android:layout_alignBottom="@+id/eventsParticipants"
        android:layout_toEndOf="@+id/eventsParticipants"
        android:text="Distance" />


</RelativeLayout>